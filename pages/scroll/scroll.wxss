.content {
  width: 100%;
  height: 200vh;
}

.scroll-box{
  width: 600rpx;
  height: auto;
  padding: 20rpx 0;
  overflow-x: scroll;
  overflow-y: hidden;
  margin: 500rpx auto 0;
  border: 1rpx solid #FF0000;
}

.scroll-box .scroll{
  display: flex;
  width: 720rpx;
  height: auto;
  padding: 0 10rpx;
}

.scroll-box .scroll::-webkit-scrollbar{
  display: none;
}

.scroll-box .scroll view{
  width: 100rpx;
  height: 100rpx;
  margin: 0 10rpx;
  background: #000000;
}

.img-box {
  width: 100%;
  height: auto;
}

.img-box image {
  display: block;
  width: 100rpx;
  height: 100rpx;
}